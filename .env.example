# APK Decompiler CLI Environment Configuration

# Application Settings
APP_NAME=apk-decompiler-cli
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO

# Output Configuration
OUTPUT_DIR=./output
TEMP_DIR=/tmp/apk-decompiler

# Android Development Bridge
ADB_PATH=adb

# APK Tool Configuration
APKTOOL_PATH=apktool
APKTOOL_FRAMEWORK_DIR=~/.apktool/framework

# JADX Configuration
JADX_PATH=jadx
JADX_TIMEOUT=300

# AAPT Configuration
AAPT_PATH=aapt

# Processing Options
MAX_CONCURRENT_PROCESSES=4
DECOMPILE_TIMEOUT=600
KEEP_TEMP_FILES=False

# Output Format
OUTPUT_FORMAT=json
VERBOSE=False
