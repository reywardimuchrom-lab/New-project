# APK Decompiler CLI Environment Configuration
# Copy this file to .env and adjust values as needed

# General Configuration
DEBUG=false
LOG_LEVEL=INFO

# Output Configuration
OUTPUT_DIR=./decompiled
TEMP_DIR=./temp
KEEP_TEMP_FILES=false

# Tool Paths (leave empty to use system PATH)
APKTOOL_PATH=
JADX_PATH=
AAPT_PATH=
ADB_PATH=

# JADX Configuration
JADX_MAX_MEMORY=4096
JADX_THREDS=4

# APKTool Configuration
APKTOOL_USE_FRAMEWORK=
APKTOOL_FORCE=

# AAPT Configuration
AAPT_VERBOSE=false

# API Keys (if using remote services)
SERVICE_API_KEY=
SERVICE_API_URL=

# Development Settings
DEVELOPMENT_MODE=false
VERBOSE_LOGGING=false

# Cache Configuration
CACHE_ENABLED=true
CACHE_DIR=./cache
CACHE_TTL=3600

# Network Configuration
TIMEOUT=30
MAX_RETRIES=3

# Security Settings
ALLOW_UNSIGNED_APKS=false
SCAN_FOR_MALWARE=true

# Platform-specific settings
# Windows: Use Windows-style paths
# macOS: Use Darwin-style paths  
# Linux: Use Unix-style paths